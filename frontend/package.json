{
  "name": "frontend",
  "private": true,
  "author": "Giulien Chow",
  "description": "Minden Airport Frontend",
  "version": "0.0.0",
  "type": "module",
  "main": "dist-electron/main.js",
  "scripts": {
    "lint": "eslint .",
    "preview": "vite preview",
    "build:web": "tsc --project tsconfig.web.json && vite build",
    "build:web-docker": "vite build",
    "build:electron": "tsc -b && vite build && electron-builder",
    "dev": "vite --mode electron"
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.1.8",
    "clsx": "^2.1.1",
    "electron": "^37.2.3",
    "frontend": ".",
    "lucide-react": "^0.514.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router": "^7.6.2",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.8",
    "vite-tsconfig-paths": "^5.1.4"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.0",
    "@types/node": "^24.0.0",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@vitejs/plugin-react-swc": "^3.9.0",
    "cross-env": "^7.0.3",
    "electron-builder": "^25.1.8",
    "eslint": "^9.25.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.30.1",
    "vite": "^6.3.5",
    "vite-plugin-electron": "^0.29.0"
  },
  "build": {
    "appId": "com.mindenairport.app",
    "productName": "Minden Airport",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "package.json"
    ],
    "mac": {
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
